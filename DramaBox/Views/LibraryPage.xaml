<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.LibraryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Biblioteca"
    BackgroundColor="{AppThemeBinding Light=#F4F6FB, Dark=#0B1220}"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*"
          BackgroundColor="{AppThemeBinding Light=#F4F6FB, Dark=#0B1220}">

        <!-- TOPBAR -->
        <Grid Grid.Row="0"
              Padding="12,12,12,10"
              ColumnDefinitions="*,Auto"
              BackgroundColor="{AppThemeBinding Light=#EFEFEF, Dark=#0F172ACC}">
            <Label Text="Biblioteca"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#0F172A, Dark=#E5E7EB}"
                   VerticalOptions="Center"/>

            <Frame Grid.Column="1"
                   WidthRequest="38"
                   HeightRequest="38"
                   CornerRadius="10"
                   Padding="0"
                   BorderColor="{AppThemeBinding Light=#E2E8F0, Dark=#1F2937}"
                   BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#0F172A}"
                   HasShadow="True">
                <Button Text="☾"
                        FontSize="16"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#0F172A, Dark=#E5E7EB}"
                        Clicked="OnThemeClicked"/>
            </Frame>
        </Grid>

        <!-- CONTENT -->
        <ScrollView Grid.Row="1">
            <!-- padding-bottom extra para o Windows chegar no fundo -->
            <VerticalStackLayout Spacing="12" Padding="12,10,12,110">

                <!-- HERO CARD -->
                <Border Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#1F2937}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light=#0B1220, Dark=#0B1220}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14"/>
                    </Border.StrokeShape>

                    <Grid HeightRequest="240">

                        <!-- imagem -->
                        <Image Source="{Binding HeroCoverUrl}"
                               Aspect="AspectFill"/>

                        <!-- overlay gradiente -->
                        <BoxView>
                            <BoxView.Background>
                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                    <GradientStop Color="#D1000000" Offset="0"/>
                                    <GradientStop Color="#1A000000" Offset="0.55"/>
                                    <GradientStop Color="#2A000000" Offset="1"/>
                                </LinearGradientBrush>
                            </BoxView.Background>
                        </BoxView>

                        <!-- Conteúdo (texto + botões) -->
                        <Grid Padding="14"
                              RowDefinitions="Auto,Auto,Auto,Auto"
                              VerticalOptions="End">

                            <Label Text="{Binding HeroTitle}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>

                            <Label Grid.Row="1"
                                   Text="{Binding HeroSubtitle}"
                                   FontSize="12"
                                   TextColor="#D1D5DB"
                                   Margin="0,6,0,0"/>

                            <!-- Botões -->
                            <Grid Grid.Row="2"
                                  ColumnDefinitions="*,*,Auto"
                                  ColumnSpacing="10"
                                  Margin="0,12,0,0">

                                <!-- Continuar (branco) -->
                                <Button Grid.Column="0"
                                        Text="▶  Continuar"
                                        BackgroundColor="White"
                                        TextColor="#111827"
                                        FontAttributes="Bold"
                                        CornerRadius="10"
                                        Padding="14,10"
                                        Clicked="OnContinueClicked"/>

                                <!-- Curtir (vidro) -->
                                <Border x:Name="LikeGlass"
                                        Grid.Column="1"
                                        BackgroundColor="#14FFFFFF"
                                        Stroke="#26FFFFFF"
                                        StrokeThickness="1"
                                        Padding="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>

                                    <Button x:Name="LikeBtn"
                                            Text="♥  Curtir"
                                            BackgroundColor="Transparent"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            Padding="14,10"
                                            Clicked="OnLikeClicked"/>
                                </Border>

                                <!-- Link/Share (vidro) -->
                                <Border Grid.Column="2"
                                        WidthRequest="54"
                                        BackgroundColor="#14FFFFFF"
                                        Stroke="#26FFFFFF"
                                        StrokeThickness="1"
                                        Padding="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>

                                    <Button Text="⧉"
                                            BackgroundColor="Transparent"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            Padding="0"
                                            Clicked="OnShareClicked"/>
                                </Border>

                            </Grid>

                        </Grid>

                    </Grid>
                </Border>

                <!-- CARD: Séries curtidas -->
                <Border Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#1F2937}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#0F172A}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="10" Padding="14">

                        <Label Text="Séries curtidas"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#0F172A, Dark=#E5E7EB}"/>

                        <Label Text="As séries que você curtiu aparecem aqui (mock)."
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#64748B, Dark=#9CA3AF}"/>

                        <!-- GRID -->
                        <CollectionView ItemsSource="{Binding LikedItems}"
                                        SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <!-- CORREÇÃO: Orientation é obrigatório -->
                                <GridItemsLayout Span="2" Orientation="Vertical"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0" Margin="0,0,10,10">

                                        <Border Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#1F2937}"
                                                StrokeThickness="1"
                                                BackgroundColor="{AppThemeBinding Light=#0B1220, Dark=#0B1220}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12"/>
                                            </Border.StrokeShape>

                                            <Grid HeightRequest="170">

                                                <Image Source="{Binding CoverUrl}"
                                                       Aspect="AspectFill"/>

                                                <BoxView>
                                                    <BoxView.Background>
                                                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                            <GradientStop Color="#B8000000" Offset="0"/>
                                                            <GradientStop Color="#00000000" Offset="0.58"/>
                                                        </LinearGradientBrush>
                                                    </BoxView.Background>
                                                </BoxView>

                                                <!-- vidro com texto -->
                                                <Border Margin="10"
                                                        VerticalOptions="End"
                                                        Padding="10,9"
                                                        BackgroundColor="#1AFFFFFF"
                                                        Stroke="#26FFFFFF"
                                                        StrokeThickness="1">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="10"/>
                                                    </Border.StrokeShape>

                                                    <VerticalStackLayout Spacing="3">
                                                        <Label Text="{Binding Title}"
                                                               FontSize="12"
                                                               TextColor="#FFFFFFF2"
                                                               LineBreakMode="TailTruncation"/>
                                                        <Label Text="{Binding Genre}"
                                                               FontSize="11"
                                                               TextColor="#FFFFFFC7"
                                                               LineBreakMode="TailTruncation"/>
                                                    </VerticalStackLayout>
                                                </Border>

                                                <!-- TAP no card inteiro -->
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Tapped="OnLikedTapped"
                                                        CommandParameter="{Binding .}"/>
                                                </Grid.GestureRecognizers>

                                            </Grid>
                                        </Border>

                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </Border>

                <!-- Spacer extra (Windows) -->
                <BoxView HeightRequest="40" Opacity="0"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
