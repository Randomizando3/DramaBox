<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DramaBox.Views.LoginPage"
    Title="Entrar"
    BackgroundColor="{StaticResource Bg}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="14">

            <Label Text="Entrar"
                   FontSize="28"
                   FontAttributes="Bold" />

            <Label Text="Acesse sua conta para continuar"
                   TextColor="{StaticResource Muted}" />

            <Frame BackgroundColor="{StaticResource Card}"
                   CornerRadius="18"
                   Padding="16"
                   HasShadow="False">

                <VerticalStackLayout Spacing="10">

                    <Entry x:Name="EmailEntry"
                           Placeholder="E-mail"
                           Keyboard="Email" />

                    <Entry x:Name="PassEntry"
                           Placeholder="Senha"
                           IsPassword="True" />

                    <Button Text="Entrar"
                            Clicked="OnLogin" />

                    <Button Text="Criar conta"
                            BackgroundColor="#2A2A3E"
                            Clicked="OnGoRegister" />
                </VerticalStackLayout>
            </Frame>

            <Label x:Name="ErrorLabel"
                   TextColor="#FF5A7A"
                   IsVisible="False" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
